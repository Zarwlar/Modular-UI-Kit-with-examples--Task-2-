include ./../../blocks/messager/messager.pug
include ./../../blocks/standart-button/standart-button.pug

mixin seller__messager(options)
    .js-seller__messager.seller__messager
        .js-seller__messager_hide.seller__messager_hide chat
        +messager({
            theme_name: options.theme_name,
            theme_info: options.theme_info,
            name: options.name,
            photo: options.photo,
            theme: options.theme_button
        })


mixin seller__stuff(options)
    .seller__stuff
        img.seller__stuff-img(src= options.imgsrc)
        a.seller__stuff-name(href=options.name)= options.name
        div.seller__stuff-price= options.price + ' ₽'
        +standart-button({type: 'normal', size: 'normal', text: 'купить', theme: 'buy'})
