.market

    &__container
        display: flex;
        flex-wrap: wrap;

    &__header
        display: flex;
        font-family: LatoWebBlack, 'Arial';
        background-color: #E0AD82;
        width: 100%;

        & > *:first-child
            margin-left: 3%;

        & > *
            margin-top: 1%;
            margin-bottom: 1%;
            margin-right: 2%;

        & > a:first-of-type
            margin-left: 10%;

    &__basket-link::before
        margin-right: 30%;
        font-family: FontAwesome;
        content: '\F291';

    &__login-link, &__registration-link, &__helper-link, &__basket-link
        color: white;
        text-decoration: none;
        line-height: 2;

    &__login-link:hover, &__registration-link:hover, &__helper-link:hover
        text-decoration: underline;

    &__brand
        font-size: 2rem;
        color: white;
        text-decoration: none;

    &__helper
        display: none;
        position: absolute;
        z-index: 100;
        width: 20%;

        &_close
            width: 10%;
            font-size: 0.8rem;
            text-align: center;
            padding: 5px;
            cursor: pointer;
            text-transform: uppercase;
            font-family: LatoWebBlack, 'Arial';
            background-color: white;
            border: 1px solid rgba(0,0,0,0.1);
            flex: initial;
            writing-mode: vertical-rl;
            opacity: 0.4;

        &_close:hover
            opacity: 0.8;

    &__search
        flex-grow: 1;
        margin-left: 15%;

    &__top-day-sellers
        width: 100%;
        display: flex;
        flex-direction: column;
        flex-grow: 1;

        &-text
            text-align: center;
            font-family: LatoWebBlack, 'Arial';
            font-size: 1.5rem;
            text-transform: capitalize;
            padding: 2% 0 4% 0;

    &__top-day-stuff
        height: 10rem;
        background: white;
        width: 33.33333333%;

        & > *
            justify-content: center;

    &__stuffs-container
        display: flex;

    &__stuff-container
        display: flex;
        align-items: center;

    &__stuff-slider
        margin-left: 6%;
        margin-right: 6%;
        margin-top: 5%;
        padding-bottom: 1%;
        display: flex;
        flex-direction: column;
        outline: 1px solid gray;
        outline-offset: 10px;
        overflow: hidden;
        width: 180px;


        & > *
            text-align: center;
            font-family: LatoWebBlack, 'Arial';

    &__slides
        width: 6000px;
        list-style-type: none;

        & > li
            height: 0;

    &__stuff
        float: left;

    &__seller
        display: flex;
        flex-wrap: wrap;

        &-reputation-text
            font-family: LatoWebBlack, 'Arial';
            text-align: center;

    &__stuff-img
        width: 180px;
        height: 150px;

    &__stuff-name
        display: block;
        margin: 2% 0;

    &__buy-button.standart-button__button
        box-shadow: 0 0.15rem 0 0 darken(#8EC0F4, 10);
        background-color: #8EC0F4;
        border: 1px solid #8EC0F4;

    &__buy-button-text.standart-button
        color: darken(#8EC0F4, 10)

    &__helper-button.standart-button__button
        box-shadow: 0 0.15rem 0 0 darken(#E0AD82, 20);
        background-color: darken(#E0AD82, 15);
        border: 1px solid darken(#E0AD82, 15);

    &__helper-button_text.standart-button
        color: darken(#E0AD82, 20)