.market

    &__container
        display: flex;
        flex-wrap: wrap;

    &__stuffs-container
        display: flex;

    &-basket__link::before
        margin-right: 30%;
        font-family: FontAwesome;
        content: '\F291';

    &-login__link, &-registration__link, &-helper__link, &-basket__link
        color: white;
        text-decoration: none;
        line-height: 2;

    &-login__link:hover, &-registration__link:hover, &-helper__link:hover
        text-decoration: underline;

    &__brand
        font-size: 2rem;
        color: white;
        text-decoration: none;


    &__search
        flex-grow: 1;
        margin-left: 15%;

    &__top-day-sellers
        width: 100%;
        display: flex;
        flex-direction: column;
        flex-grow: 1;

        &-text
            text-align: center;
            font-family: LatoWebBlack, 'Arial';
            font-size: 1.5rem;
            text-transform: capitalize;
            padding: 2% 0 4% 0;

    &__top-day-stuff
        height: 10rem;
        background: white;
        width: 33.33333333%;

        & > *
            justify-content: center;