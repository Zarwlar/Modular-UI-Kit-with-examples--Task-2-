include ../standart-button/standart-button.pug

mixin feedback(options)
    if !options 
        - options = {}
    .feedback
        form(action="feedback", class="feedback__form")
            +field('name','text','Your Name')
            +field('email','email','Your Email')
            textarea(placeholder="Your Message").feedback__textarea
            .feedback__submit
                +standart-button({
                    type: 'normal',
                    size: 'normal',
                    text: options.btn_text ? options.btn_text : 'submit',
                    bkg: options.btn_bkg,
                    text_color: options.btn_clr
                })

mixin field(name, type, placeholder)
    div(class="js-feedback__" + name class="feedback__" + name)
        input(type=type, placeholder=placeholder).feedback__input.js-feedback__input
        div(class="feedback__validation" class="js-feedback__validation")