include ../standart-button/standart-button.pug

mixin event(options)
	if !options
		- options = {}
	.event
		img.event__photo(src= options.imgsrc ? options.imgsrc : '.\\blocks\\event\\img\\event__default-img.jpg')
		.event__text
			.event__date
				.event__day= options.day ? options.day : '1'
				.event__month= options.month ? options.month : 'January' 
			.event__title= options.title ? options.title : 'title'
			.event__description= options.description ? options.description : 'description'
			.event__button
				+standart-button({type:'normal',text: options.btn_text ? options.btn_text : 'button' ,size:'small',bkg: options.btn_bkg ? options.btn_bkg : '' , text_color: options.btn_color ? options.btn_color : ''})