.event
	display: flex;
	height: 13.3rem;
	max-width: 18rem;

	&__photo
		background: #e75735;
		width: 33%;
		object-fit: cover;

	&__text
		display: flex;
		flex-direction: column;
		padding: 4.5% 7% 1.5%;
		background-color: #e75735;
		color: white;

	&__date
		display: inline-flex;
		font-family: LatoWebLight;
		padding-bottom: 4%;
		align-items: baseline;

	&__day
		font-size: 4.25rem;
		padding-right: 8%;

	&__month
		font-size: 1.8rem;

	&__button
		text-align: center;
		margin-top: 10%;

	&__title
		font-family: LatoWebBlack, 'Arial';
		text-transform: uppercase;
		font-size: 0.85rem;

	&__date
		text-transform: capitalize;

	&__description
		font-family: LatoWeb, 'Arial';
		overflow: hidden;
		font-size: 0.75rem;
		max-height: 1.8rem;