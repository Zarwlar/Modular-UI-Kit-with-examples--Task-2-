$event-background-color = #E75735;
$text-color = #FFF;

.event
    display: flex;
    height: 13.3rem;

    &__photo-frame
        width: 35%;
        background: $event-background-color;

    &__photo
        object-fit: cover;
        height: 100%;
        width: 100%;

    &__text
        display: flex;
        flex-direction: column;
        padding: 4.5% 7% 1.5%;
        background-color: $event-background-color;
        color: $text-color;
        width: 65%;

    &__date
        display: inline-flex;
        font-family: LatoWebLight, 'Arial';
        padding-bottom: 4%;
        align-items: baseline;

    &__day
        font-size: 4.25rem;
        padding-right: 8%;
        text-transform: capitalize;

    &__month
        font-size: 1.8rem;

    &__button
        text-align: center;
        margin-top: 10%;

    &__title
        font-family: LatoWebBlack, 'Arial';
        text-transform: uppercase;
        font-size: 0.85rem;

    &__description
        font-family: LatoWeb, 'Arial';
        overflow: hidden;
        font-size: 0.75rem;
        max-height: 1.8rem;

    &_theme_black
        background-color: black;