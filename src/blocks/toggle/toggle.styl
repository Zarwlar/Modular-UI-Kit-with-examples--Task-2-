$toggle-background = #FFF;
$label-background = #ECEEEF;
$handle-background = #FFF;
$label-off-text-color = #AAA;
$label-on-text-color = #FFF;
$label-on-background-color = #4eb7a8;

.toggle
  position: relative;
  display: inline-block;
  vertical-align: top;
  width: 3.7rem;
  height: 1.5rem;
  padding: 0.18rem;
  background-color: $toggle-background ;
  border-radius: 11px;
  cursor: pointer;

  &__input
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;


  &__label
    position: relative;
    display: block;
    height: inherit;
    font-size: 0.7rem;
    text-transform: uppercase;
    background: $label-background;
    border-radius: inherit;
    -webkit-transition: 0.15s ease-out;
    -moz-transition: 0.15s ease-out;
    -o-transition: 0.15s ease-out;
    transition: 0.15s ease-out;

  &__handle
    position: absolute;
    top: 0.4rem;
    left: 0.4rem;
    width: 1.1rem;
    height: 1.1rem;
    background: $handle-background;
    border-radius: 10px;
    -webkit-transition: left 0.15s ease-out;
    -moz-transition: left 0.15s ease-out;
    -o-transition: left 0.15s ease-out;
    transition: left 0.15s ease-out;

.toggle__label:before, .toggle__label:after {
  position: absolute;
  top: 50%;
  margin-top: -.5em;
  line-height: 1;
  font-family: LatoWebBlack, 'Arial';
}
.toggle__label:before {
  content: attr(data-off);
  right: 0.6rem;
  color: $label-off-text-color;
}
.toggle__label:after {
  content: attr(data-on);
  left: 0.75rem;
  color: $label-on-text-color;
  opacity: 0;
}
.toggle__input:checked ~ .toggle__label {
  background: $label-on-background-color;
}
.toggle__input:checked ~ .toggle__label:before {
  opacity: 0;
}
.toggle__input:checked ~ .toggle__label:after {
  opacity: 1;
}

.toggle__input:checked ~ .toggle__handle {
  left: 2.5rem;
}

