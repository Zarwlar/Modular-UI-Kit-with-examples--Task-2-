.seller-messager
    display: flex;
    position: fixed;
    right: 0;
    bottom: 0;
    z-index: 10;
    max-width: 25%;


    &_hide
        font-size: 0.8rem;
        text-align: center;
        padding: 5px;
        cursor: pointer;
        text-transform: uppercase;
        font-family: LatoWebBlack, 'Arial';
        background-color: white;
        border: 1px solid rgba(0,0,0,0.1);
        flex: initial;
        writing-mode: vertical-rl;
        opacity: 0.4;

        &:hover
            opacity: 0.8;
