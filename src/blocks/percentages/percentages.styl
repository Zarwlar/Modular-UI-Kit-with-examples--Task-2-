$percent-color = #b1b1b1;

.percentages
	position: relative;
	display: inline-block;
	width: 110px;
	height: 110px;
	text-align: center;

	&__position-vertical
		position: relative; 
		bottom: 2rem;
		display: inline-block;

	canvas 
		position: absolute;
		top: 0;
		left: 0;

	&__percent
		display: inline-block;
		line-height: 110px;
		z-index: 2;
		font-size: 2.5rem;
		color: $percent-color;
		font-family: LatoWebLight, 'Arial';

