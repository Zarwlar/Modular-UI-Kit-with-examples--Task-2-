.order
    display: flex;
    flex-direction: column;

    &__stages
        margin: 1% 0;

        & .stages
            margin: 0 auto;
            width: 68%;
    
    & .drop-down
        min-width: 10rem;

    &__steps
        display: flex;
        justify-content: space-around;
        margin-bottom: 0.4%;
        font-family: SourceSansPro-Regular, 'Arial';

        & > *:nth-child(2n)
            padding-right: 2rem;

        & > *:last-child
            padding-right: 1rem;

    &__stuffs
        margin: 0 auto;

    &__cartmain
        border-spacing: 1.5rem 0.3rem;
        font-family: LatoWebLight, 'Arial';

    &__delivery-title
        font-family: LatoWebBlack, 'Arial';
        display: block;
        margin: 0 auto;
        padding: 1% 0;

    &__delivery
        margin-top: 1%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        font-family: SourceSansPro-Regular, 'Arial';

    &__premium-delivery
        margin-top: 3%;
        display: flex;
        outline: 1px solid rgba(0,0,0,0.2);
        outline-offset: 5px;

    &__premium-delivery-description
        padding-left: 3%;
        white-space: pre;

    &__premium-delivery-flag
        align-self: center;

    &__country
        margin: 0 auto;

    &__premium-delivery-payment
        margin-top: 2%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;

    &__premium-delivery-payment-text
        align-self: center;

    &__premium-delivery-payment-way

        & > *
            margin: 5% 0;


    &__payment-button
        align-self: flex-end;
        margin: 2% 0;