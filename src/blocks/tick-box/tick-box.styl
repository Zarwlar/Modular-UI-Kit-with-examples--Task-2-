.tick-box
	margin-right: 20px;
	width: 1.5rem;
	height: 1.5rem;
	border-radius: 50%;
	background: #e5e5e5;
	color: #c0c0c0;
	text-align: center;
	font-size: 1rem;
	line-height: 1.6rem;
	cursor: pointer;
	transition: background .15s ease-in,
							color .15s ease-in;
	font-family: FontAwesome;

	&:after
		content: '\f00c';

	&__mark-active
		background: #4eb7a8;
		color: #fff;
		transition: background .15s ease-in,
								color .15s ease-in;
		&:after
			content: '\f00c';

