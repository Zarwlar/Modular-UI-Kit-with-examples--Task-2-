$stages-text-color = #A4A4A4;
$complete-active-background = #E75735;
$complete-active-color = #FFF;

$inactive-color = #E5E5E5;

.stages {
	list-style: none;
	margin: 0;
	padding: 0;
	display: table;
	table-layout: fixed;
	width: 100%;
	color: $stages-text-color;
}

.stages > li {
	position: relative;
	display: table-cell;
	text-align: center;
	font-size: 0.8em;
}

.stages > li:before {
	content: attr(data-step);
	display: block;
	margin: 0 auto;
	background: $inactive-color;
	width: 2.5em;
	height: 2.5em;
	text-align: center;
	margin-bottom: 0.25em;
	line-height: 2.5em;
	border-radius: 100%;
	position: relative;
	z-index: 1000;
	font-family: LatoWebBlack, 'Arial';
}

.stages > li:after {
	content: '';
	position: absolute;
	display: block;
	background: $inactive-color;
	width: 100%;
	height: 0.5em;
	top: 1em;
	left: 50%;
	margin-left: 1.5em\9;
	z-index: -1;
}

.stages > li:last-child:after {
	display: none;
}

.stages > li.stages_complete {
	color: $complete-active-background;
}

.stages > li.stages_complete:before, .stages > li.stages_complete:after {
	color: $complete-active-color;
	background: $complete-active-background;
}

.stages > li.stages_active {
	color: $complete-active-background;
}

.stages > li.stages_active:before {
	color: $complete-active-color;
	background: $complete-active-background;
}

