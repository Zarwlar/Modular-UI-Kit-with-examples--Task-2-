$banner-background-color = #E75735;
$banner-text-color = #FFF;

.location

	&__map
		height: 12.3rem;

	&__banner
		display: flex;
		background-color: $banner-background-color;
		font-family: LatoWebLight, 'Arial';
		color: $banner-text-color ;
		padding-top: 3%;
		padding-bottom: 3%;

		& > *:last-child
			padding-left: 4%;

	&__phrase
		font-size: 1.9rem;
		padding-left: 4.5%;

	&__adress
		text-transform: uppercase;
		font-family: LatoWebBlack, 'Arial';
		font-size: 0.85rem;
		padding-left: 4.5%;
		padding-right: 10.5%;

	&__icon
		font-family: FontAwesome;
		font-size: 1.8rem;

		&_crosshairs::before
			display block
			content '\f05b'

		&_marker::before
			display block
			content '\f041'

