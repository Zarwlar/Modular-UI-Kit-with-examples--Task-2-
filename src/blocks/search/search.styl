$input-text-color = #888;
$not-found-background-color = #E75735;
$submit-text-color = #FFF;

.search
    max-width: 18rem;
    position: relative;

    &__form
        display: flex;

    &__input
        width: 100%;
        color: $input-text-color;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
        font-family: SourceSansPro-Regular, 'Arial';
        background-color: #e5e5e5;
        transition: background-color 0.1s ease;	
        padding: 0.35rem 0.85rem;
        border: none;
        outline: none;

        &_not-found
            background-color: $not-found-background-color;

            &::placeholder
                color: white;
            &::-moz-placeholder
                color: white;
            &:-moz-placeholder
                color: white;
            &:-ms-input-placeholder
                color: white;

    &__submit
        font-family: FontAwesome;
        background-color: $not-found-background-color;
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
        width: 2.45rem;
        border: none;
        outline: none;

        &:after
            content '\f002'
            color: $submit-text-color;

