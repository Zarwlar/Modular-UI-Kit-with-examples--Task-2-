.messager
	box-sizing: border-box;
	width: 500px;
	min-width: 390px;
	height: 630px;
	background: #f2f2f2;
	padding: 25px;
	margin: 20px;

	&__textarea
		width: 100%;

	&__button-reply
		margin-top: 2%;
		width: 100%;

	&__chatlogs
		padding: 10px;
		width: 100%;
		height: 430px;
		overflow-x: hidden;
		overflow-y: scroll;

		&::-webkit-scrollbar
			width: 6px;

		&::-webkit-scrollbar-thumb
			border-radius: 5px;
			background: rgba(0,0,0,.0)

	&__chat
		display: flex;
		flex-flow: row wrap;
		align-items: flex-start;
		margin-bottom: 10px;


		& .messager__message
			width: 70%;
			padding: 15px;
			margin: 5px 10px 0;
			border-radius: 10px;
			color: #868686;
			font-size: 18px;
			font-family: LatoWebBold, 'Arial';


	&__friend .messager__message
		background: #fff;

	&__self .messager__message
		background: #fff;

	&__self
		justify-content: flex-end;

	&__form
		margin-top: 20px;
		display: flex;
		flex-direction: column;
		align-items: center;

	&__form textarea
			background-color: #e5e5e5;
			height: 70px;
			border: 3px solid #fff;
			border-radius: 3px;
			resize: none;
			padding: 10px;
			font-size: 18px;
			color: #333;
			box-sizing: border-box;
			width: 100%;
			outline: none;

	&__form textarea:focus
		background: #fff;
