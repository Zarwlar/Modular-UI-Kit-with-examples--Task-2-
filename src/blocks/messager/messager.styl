.messager
	box-sizing: border-box;
	width: 500px;
	min-width: 390px;
	height: 600px;
	background: orange;
	padding: 25px;
	margin: 20px;
	box-shadow: 0 3px #ccc;

	&__chatlogs
		padding: 10px;
		width: 100%;
		height: 450px;
		overflow-x: hidden;
		overflow-y: scroll;

		&::-webkit-scrollbar
			width: 12px;

		&::-webkit-scrollbar-thumb
			border-radius: 5px;
			background: rgba(0,0,0,.4)

	&__chat
		display: flex;
		flex-flow: row wrap;
		align-items: flex-start;
		margin-bottom: 10px;


		& .messager__message
			width: 70%;
			padding: 15px;
			background: blue;
			margin: 5px 10px 0;
			border-radius: 10px;
			color: #fff;
			font-size: 18px;


	&__friend .messager__message
		background: #1adda4;

	&__self
		justify-content: flex-end;

	&__self .messager__message
		background: #1ddced;

	&__form
		margin-top: 20px;
		display: flex;
		align-items: center;

	&__form textarea
			backface-visibility: #fbfbfb;
			width: 75%;
			height: 50px;
			border: 2px solid #eee;
			border-radius: 3px;
			resize: none;
			padding: 10px;
			font-size: 18px;
			color: #333;

	&__form textarea:focus
		background: #fff;

	&__form button
		background: #1ddced;
		padding: 5px 15px;
		font-size: 30px;
		color: #fff;
		border: none;
		margin: 0 10px;
		border-radius: 3px;
		box-shadow: 0 3px 0 #0eb2c1;
		cursor: pointer;

	&__form button:hover
		background: #13c8d9;