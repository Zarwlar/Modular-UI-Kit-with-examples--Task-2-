mixin order-cart(options)
    - sum = 0;
    table.order-cart
        tr
            th Наименование продукта
            th
            th Цена
        each option in options
            tr
                td #{option.name}
                td #[img(src=option.imgsrc height='70' width='80')]
                td #{option.price}
            - sum = +option.price + sum
        tr
            td
            td
                strong Стоимость товара
            td 
                strong #{sum}