.market-helper
    display: none;
    position: absolute;
    z-index: 100;
    max-width: 25%;

    &_close
        width: 10%;
        font-size: 0.8rem;
        text-align: center;
        padding: 5px;
        cursor: pointer;
        text-transform: uppercase;
        font-family: LatoWebBlack, 'Arial';
        background-color: white;
        border: 1px solid rgba(0,0,0,0.1);
        flex: initial;
        writing-mode: vertical-rl;
        opacity: 0.4;

    &_close:hover
        opacity: 0.8;
