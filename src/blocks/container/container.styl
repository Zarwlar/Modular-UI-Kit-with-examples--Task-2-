.container
    margin: 0 auto;
    width: 600px;

    h2
        text-transform: uppercase;
        display: block;
        text-align: center;
        font-family: LatoWebBlack, 'Arial';
        font-size: 1.2rem;

    .percentages
        margin-right: 22px;

    .arrow-button
        margin-left: 10px;
        margin-right: 10px;

    & .search,
    & .drop-down
        margin-bottom: 4.5%;

    & .feedback
        margin-bottom: 2%;

    & .user-profile
        margin-top: 8%;

    &__center
        text-align: center;

        & > .standart-button
            margin-left: 12px;
            margin-right: 12px;

    &__left
        width: 50%;
        float: left;
        box-sizing: border-box;
        padding-right: 3%;

        & > *
            margin-left: auto;
            margin-right: auto;

    &__right
        width: 50%;
        float: right;
        box-sizing: border-box;
        padding-left: 3%;

        & > *
            margin-left: auto;
            margin-right: auto;

        & .rangeslider-continuous_horizontal
            margin-bottom: 6%;

        & .toggle
            margin-left: 0.5rem;

        & .tick-box
            margin-left: 1rem;

.clearfix::after
    content: " ";
    display: table;
    clear: both;

@media screen and (max-width: 700px) {
    html, body {
        padding: 0;
        margin: 0;
    }
  .container {
    width: 250px;
  }
      .container__left {
        float: none;
        width: inherit;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-right: 0;
  }

  .container__right {
        float: none;
        width: inherit;
        padding-left: 0;
  }
}