.arrow-button
	display: inline-block;
	cursor: pointer;
	border-radius: 50%;
	border: 0.2rem solid #e5e5e5;
	font-size: 2.5rem;
	text-align: center;
	width: 2.75rem;
	height: 2.75rem;

	&_disabled
		background-color: #e5e5e5;
		border-color: #e5e5e5;
		color: #fff;

	&_inactive
		background-color: #fff;
		border-color: #4eb7a8;
		color: #4eb7a8;

	&_enabled
		background-color: #4eb7a8;
		border-color: #4eb7a8;
		color: #fff;

	&__arrow
		font-family FontAwesome

		&_left::after
			display block
			content '\f104'
			margin-right 0.3rem;
			margin-top 0.1rem;


		&_right::after
			display block
			content '\f105'
			margin-left 0.2rem;
			margin-top 0.1rem;
