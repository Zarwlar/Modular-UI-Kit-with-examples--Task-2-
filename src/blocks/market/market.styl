.market

    &__container
        display: flex;
        flex-wrap: wrap;

    &__basket-link::before
        margin-right: 30%;
        font-family: FontAwesome;
        content: '\F291';

    &__login-link, &__registration-link, &__helper-link, &__basket-link
        color: white;
        text-decoration: none;
        line-height: 2;

    &__login-link:hover, &__registration-link:hover, &__helper-link:hover
        text-decoration: underline;

    &__brand
        font-size: 2rem;
        color: white;
        text-decoration: none;


    &__search
        flex-grow: 1;
        margin-left: 15%;

    &__top-day-sellers
        width: 100%;
        display: flex;
        flex-direction: column;
        flex-grow: 1;

        &-text
            text-align: center;
            font-family: LatoWebBlack, 'Arial';
            font-size: 1.5rem;
            text-transform: capitalize;
            padding: 2% 0 4% 0;

    &__top-day-stuff
        height: 10rem;
        background: white;
        width: 33.33333333%;

        & > *
            justify-content: center;