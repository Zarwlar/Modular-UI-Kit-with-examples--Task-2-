.stuff
	display: flex; 
	flex-wrap: wrap;

	& > *
		margin: 0 auto;

	& > *:last-child
		padding-bottom: 2%;

	&__container
		margin: 0 auto;
		height: 100%;
		display: flex;
		justify-content: center;
		text-align: center;
		flex-wrap: wrap;

		& > *:first-child
			margin-top: 2%;

	&__buy-button
		padding-bottom: 1%;

	&__element
		display: flex;
		width: 100%;
		flex-direction: column;
		align-items: center;

	&__name
		padding: 2% 0 1%;
		font-family: LatoWebBlack, 'Arial';
		font-size: 2rem;

	&__photo
		width: 40%;

	&__description
		margin: 1% 0;
		text-align: justify;
		width: 40%;
		font-family: LatoWebLight, 'Arial';
		font-weight: bold;

	&__location-banner.location__banner
		background-color: #D18545;